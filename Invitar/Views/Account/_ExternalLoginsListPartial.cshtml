@using Microsoft.Owin.Security
@{
    string action = Model.Action;
    string returnUrl = Model.ReturnUrl;
    <form id="login-launch" action="@Url.Action("ExternalLogin", "Account")" method="POST" target="login-popup" onsubmit="invokeLogin();">
            @Html.AntiForgeryToken()
            <ul class="list-inline style-icons text-center">
                <li><a href="/"><i class="icon-home icon-round icon-round-sm icon-color-grey"></i></a></li>
                <li>
                    <button type="submit" style="background: transparent; border: none !important; font-size: 0;" id ="facebook" name="provider" value="Facebook" title="Facebook">
                        <i class="icon-facebook icon-round icon-round-sm icon-color-grey"></i>
                    </button>
                </li>
                <li>
                    <button type="submit" style="background: transparent; border: none !important; font-size: 0;" id="google" name="provider" value="Google" title="Google">
                        <i class="icon-google-plus icon-round icon-round-sm icon-color-grey"></i>
                    </button>
                </li>
            </ul>
        </form>
        }
