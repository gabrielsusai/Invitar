@model IEnumerable<Invitar.Models.Event>

<div class="panel panel-green margin-bottom-40">
    <div class="panel-body tab-content">
        <div class="headline">
            <h2>Upcoming Events</h2>
        </div>
        <div class="row">
            @if (Model == null)
            {
                <p>No upcoming events.</p>
            }
            else
            {
                foreach (var item in Model)
                {
                    <div class="col-md-3">
                        <div class="thumbnails thumbnail-style thumbnail-kenburn">
                            <div class="thumbnail-img">
                                <div class="overflow-hidden">
                                    <img class="img-responsive" style="width:22em; height:15em;" src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(item.Image))" alt="" />
                                </div>
                                 @Html.ActionLink("View", "ViewEvent", "Event", new { eventID = item.Id }, new { @class = "btn-more hover-effect" })
                            </div>
                            <div class="caption">
                                <h3><a class="hover-effect" href="#">@item.Title</a></h3>
                                <p>@item.Location</p>
                                <p>@item.StartDate.ToShortDateString() at @item.StartTime</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
